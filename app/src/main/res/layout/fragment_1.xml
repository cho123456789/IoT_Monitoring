<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment_InOutput">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/frame1"
            android:layout_width="wrap_content"
            android:layout_height="822dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="829dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="809dp">


                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="match_parent"
                            android:layout_height="71dp"
                            android:background="#344955"
                            android:gravity="clip_vertical|center_horizontal|center_vertical"
                            android:text=" Temperature"
                            android:textColor="#FFFFFF"
                            android:textSize="35sp" />

                        <TextView
                            android:id="@+id/txt00"
                            android:layout_width="216dp"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/progressBar"

                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="332dp"
                            android:layout_marginEnd="17dp"
                            android:gravity="center_horizontal"
                            android:text="Value"
                            android:textColor="#F6F4F4"
                            android:textSize="30sp"
                            tools:ignore="TextContrastCheck" />

                        <ProgressBar
                            android:id="@+id/progressBar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="788dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="-133dp"
                            android:layout_marginTop="-56dp"
                            android:layout_marginEnd="123dp"
                            android:layout_marginRight="100dp"
                            android:layout_marginBottom="86dp"
                            android:paddingTop="360dp"
                            android:paddingBottom="340dp"
                            android:progressDrawable="@drawable/lay_list_ic"
                            android:rotation="270" />

                        <TextView
                            android:id="@+id/txt1"
                            android:layout_width="225dp"
                            android:layout_height="100dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"

                            android:layout_marginEnd="13dp"
                            android:layout_marginBottom="381dp"
                            android:background="@drawable/btn_shape"
                            android:gravity="center_horizontal|left|center_vertical"
                            android:paddingLeft="30sp"
                            android:text="111"
                            android:textColor="#FFFFFF"
                            android:textSize="40sp"
                            tools:ignore="TextContrastCheck" />

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="116dp"
                            android:layout_height="87dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="339dp"
                            android:layout_marginEnd="14dp"
                            android:background="@drawable/btn_shape"
                            android:src="@drawable/temp_c" />

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="112dp"
                            android:layout_height="486dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginEnd="282dp"
                            android:layout_marginBottom="223dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/big_temp" />

                        <Spinner
                            android:id="@+id/spinner"
                            android:layout_width="218dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="207dp"
                            android:layout_marginEnd="17dp"
                            android:background="@drawable/ripple_bttn"
                            android:minHeight="48dp"
                            android:spinnerMode="dropdown"
                            android:src="@color/black"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            tools:ignore="SpeakableTextPresentCheck" />

                        <Button
                            android:id="@+id/row_data"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="585dp"
                            android:layout_marginEnd="2dp"
                            android:text="row_data"
                            android:textColor="@color/white"
                            android:textSize="20sp" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>
</FrameLayout>