<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:context=".Fragment_Graph">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="278dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#344955"
                android:gravity="center_horizontal|center_vertical"
                android:text="Real Time Graph"
                android:textColor="#FFFFFF"
                android:textSize="35sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Grpah1_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/chart1"
                        android:layout_width="match_parent"
                        android:layout_height="240dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                    </com.github.mikephil.charting.charts.LineChart>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="8dp" />

                    <TextView
                        android:id="@+id/Channel_0"
                        android:layout_width="match_parent"
                        android:layout_height="33dp"
                        android:background="@drawable/btn_shape"
                        android:gravity="bottom|clip_vertical|center_horizontal|fill_vertical"
                        android:text="Temp Channel 0"
                        android:textColor="#FDFDFD" />

                </LinearLayout>

                <Space
                    android:layout_width="10dp"
                    android:layout_height="249dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="206dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/chart2"
                        android:layout_width="match_parent"
                        android:layout_height="240dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                    </com.github.mikephil.charting.charts.LineChart>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="8dp" />

                    <TextView
                        android:id="@+id/Channel_1"
                        android:layout_width="match_parent"
                        android:layout_height="33dp"
                        android:background="@drawable/btn_shape"
                        android:gravity="center|center_vertical"
                        android:text="Temp Channel 1"
                        android:textColor="#FAFAFA" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Grpah3_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/chart3"
                        android:layout_width="match_parent"
                        android:layout_height="240dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                    </com.github.mikephil.charting.charts.LineChart>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="8dp" />

                    <TextView
                        android:id="@+id/Channel_3"
                        android:layout_width="match_parent"
                        android:layout_height="33dp"
                        android:background="@drawable/btn_shape"
                        android:gravity="bottom|clip_vertical|center_horizontal|fill_vertical"
                        android:text="Temp Channel 3"
                        android:textColor="#FDFDFD" />

                </LinearLayout>

                <Space
                    android:layout_width="15dp"
                    android:layout_height="249dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="206dp"
                    android:layout_height="292dp"
                    android:orientation="vertical">

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/chart4"
                        android:layout_width="207dp"
                        android:layout_height="240dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                    </com.github.mikephil.charting.charts.LineChart>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="8dp" />

                    <TextView
                        android:id="@+id/Channel_4"
                        android:layout_width="207dp"
                        android:layout_height="33dp"
                        android:background="@drawable/btn_shape"
                        android:gravity="center|center_vertical"
                        android:text="Temp Channel 4"
                        android:textColor="#FAFAFA" />

                </LinearLayout>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="13dp" />

            <Button
                android:id="@+id/btn_clear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="clear"
                android:textColor="#F4F4F4" />

        </LinearLayout>



    </LinearLayout>

</FrameLayout>